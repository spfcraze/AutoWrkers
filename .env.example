# UltraClaude Environment Configuration
# Copy this file to .env and configure as needed

# =============================================================================
# Server Configuration
# =============================================================================

# Host address to bind the server
# Default: 0.0.0.0 (all interfaces)
ULTRACLAUDE_HOST=0.0.0.0

# Port to run the server on
# Default: 8420
ULTRACLAUDE_PORT=8420

# Data directory for storing projects, sessions, and logs
# Default: ./data
ULTRACLAUDE_DATA_DIR=./data

# =============================================================================
# GitHub Configuration (Optional - can also be set per project)
# =============================================================================

# Default GitHub token for new projects
# Get one at: https://github.com/settings/tokens
# GITHUB_TOKEN=ghp_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# =============================================================================
# Claude Code Configuration
# =============================================================================

# Path to claude CLI (if not in PATH)
# CLAUDE_CLI_PATH=/usr/local/bin/claude

# Auto-trust mode for Claude sessions
# Set to 'true' to automatically accept prompts
CLAUDE_AUTO_TRUST=true

# =============================================================================
# Local LLM Configuration (Optional)
# =============================================================================

# Default Ollama API URL
OLLAMA_API_URL=http://localhost:11434

# Default LM Studio API URL
LM_STUDIO_API_URL=http://localhost:1234/v1

# OpenRouter API Key (if using OpenRouter as default)
# Get one at: https://openrouter.ai/keys
# OPENROUTER_API_KEY=sk-or-v1-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# =============================================================================
# Logging Configuration
# =============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Enable debug mode (verbose logging)
DEBUG=false

# =============================================================================
# Security Configuration
# =============================================================================

# Secret key for encrypting sensitive data (tokens)
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
# ENCRYPTION_KEY=your-secret-key-here

# =============================================================================
# Session Configuration
# =============================================================================

# Maximum number of concurrent sessions globally
MAX_GLOBAL_SESSIONS=10

# Session timeout in seconds (0 = no timeout)
SESSION_TIMEOUT=3600

# Output buffer size per session (in characters)
OUTPUT_BUFFER_SIZE=1000000
